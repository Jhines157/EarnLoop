# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/earnloop

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# AdMob Server-Side Verification
ADMOB_SSV_PUBLIC_KEY=your-admob-public-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Earn Limits (per day)
DAILY_CREDIT_CAP=100
CHECKIN_REWARD=5
AD_REWARD=10
LEARN_REWARD=15
MAX_ADS_PER_DAY=5

# New User Restrictions
NEW_USER_DAYS=3
NEW_USER_CAP_MULTIPLIER=0.5
